<h1><%= @cocktail.id %># <%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.ingredient.name %>: <%= dose.description %></p>
<%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: "Remove Ingredient?"}, class: "btn btn-warning"%>
<% end %>

<br><br>

<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>

<%= link_to "Edit", edit_cocktail_path, class: "btn btn-info" %>

<%= link_to "Remove", cocktail_path(@cocktail), method: :delete, data: { confirm: "Remove Cocktail?"}, class: "btn btn-warning"%>

<%= link_to "Back to Start", cocktails_path, class: "btn btn-primary" %>

