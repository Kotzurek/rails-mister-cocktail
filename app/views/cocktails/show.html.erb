<h1><%= @cocktail.id %><%= @cocktail.name %></h1>

<% @cocktail.ingredients.each do |ingredient| %>
<p><%= ingredient.name %></p>
<p><%= ingredient.dose.description %></p>
<% end %>
<%= link_to "Edit", edit_cocktail_path, class: "btn btn-info" %>
<%= link_to "Remove", cocktail_path(@cocktail), method: :delete, data: { confirm: "Confirm removal:"}, class: "btn btn-warning"%>
<%= link_to "Back to Start", cocktails_path, class: "btn btn-primary" %>
